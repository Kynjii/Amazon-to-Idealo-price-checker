{
    "manifest_version": 3,
    "name": "Smart Price Comparison Assistant",
    "version": "1.15.0",
    "description": "Intelligent price comparison across Amazon, Idealo, Breuninger, and MyDealz with similarity matching, filtering, and Slack integration for smart shopping decisions.",
    "permissions": ["activeTab", "storage"],
    "host_permissions": ["https://www.amazon.de/*", "https://www.amazon.com/*", "https://www.amazon.co.uk/*", "https://www.amazon.ca/*", "https://www.amazon.fr/*", "https://www.amazon.it/*", "https://www.amazon.es/*", "https://www.amazon.nl/*", "https://www.idealo.de/preisvergleich/*", "https://www.breuninger.com/*"],
    "content_scripts": [
        {
            "matches": ["https://www.amazon.de/*", "https://www.amazon.com/*", "https://www.amazon.co.uk/*", "https://www.amazon.ca/*", "https://www.amazon.fr/*", "https://www.amazon.it/*", "https://www.amazon.es/*", "https://www.amazon.nl/*", "https://www.breuninger.com/*"],
            "js": ["theme.js", "textUtils.js", "priceUtils.js", "domUtils.js", "similarityEngine.js", "siteHandlers.js", "priceChartDetection.js", "priceChartModal.js", "idealoComparison.js", "mainContentScript.js"],
            "run_at": "document_idle"
        },
        {
            "matches": ["https://www.idealo.de/preisvergleich/ProductCategory/*", "https://www.idealo.de/preisvergleich/deals/*", "https://www.idealo.de/preisvergleich/OffersOfProduct/*", "https://www.mydealz.de/*", "https://www.idealo.de/preisvergleich/MainSearchProductCategory.html*"],
            "js": ["theme.js", "textUtils.js", "priceUtils.js", "domUtils.js", "similarityEngine.js", "siteHandlers.js", "mydealzFilter.js", "idealoFilter.js", "priceChartDetection.js", "priceChartModal.js", "idealoComparison.js", "mainContentScript.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["logo.png"],
            "matches": ["https://www.idealo.de/*", "https://www.mydealz.de/*", "https://www.breuninger.com/*"]
        }
    ]
}
